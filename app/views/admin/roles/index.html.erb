<h1>Roles for <%=h @user.login %></h1>
<% form_for @user, :url => { :action => "update", :id => @user } do |f| -%>

<ul> 
	<% for role in @roles %>
		<li>
				<%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %> <%= role.name %>
		</li>
  <% end %>
</ul> 

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
<div id="toolbar">
	<%= link_to "Back to users list", admin_users_path %>
</div>
