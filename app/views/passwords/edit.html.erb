<% form_tag url_for(:action => "update", :id => params[:id]) do %>
<fieldset>
  <label for="password">
    Password
  </label>
  <%= password_field_tag :password %>
  <br/>
  <label for="password_confirmation">
    Confirm Password
  </label>
  <%= password_field_tag :password_confirmation %>
  <br/>
</fieldset>
<br/>
<%= submit_tag "Reset Your Password" %>
<% end %>