<h2>Change Password</h2>
<% form_tag url_for(:action => "update") do %>
<fieldset>
  <label for="old_password" class="block">
    Old Password
  </label>
  <%= password_field_tag 'old_password', @old_password %>
  <br/>
  <label for="password" class="block">
    New Password
  </label>
  <%= password_field_tag 'password', {} %>
  <br/>
  <small>
    Between 4 and 40 characters
  </small>
  <br/>
  <label for="password_confirmation" class="block">
    Confirm new password
  </label>
  <%= password_field_tag 'password_confirmation', {} %>
  <br/>
</fieldset>
<br/>
<%= submit_tag 'Change password' %>
<% end %>
<div id="toolbar">
  <%= link_to 'Show Profile', user_path(current_user) %>&nbsp;| <%= link_to 'Edit Profile', edit_user_path(current_user) %>  
</div>