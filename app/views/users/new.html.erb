<h1>Signup</h1>
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| %>
<fieldset>
  <label for="login">
    Login
  </label>
  <%= f.text_field :login %>
  <br/>
  <label for="email">
    Email
  </label>
  <%= f.text_field :email %>
  <br/>
  <label for="password">
    Password
  </label>
  <%= f.password_field :password %>
  <br/>
  <label for="password_confirmation">
    Confirm Password
  </label>
  <%= f.password_field :password_confirmation %>
  <br/>
</fieldset>
<br/>
<%= submit_tag 'Sign up' %>
<% end %>
<div id="toolbar">
  <%= link_to 'Log In', new_session_path %>&nbsp;| <%= link_to 'Forgot Password?', forgot_password_path %>
</div>
